                        </Grid.ColumnDefinitions>

                        --><!-- Button Control --><!--

                        <Button Grid.ColumnSpan="2" BackgroundColor="#B0D7FF" CornerRadius="5">
                            <Button.Margin>
                                <OnPlatform x:TypeArguments="Thickness">
                                    <On Platform="Android" Value="0" />
                                    <On Platform="iOS" Value="0" />
                                </OnPlatform>
                            </Button.Margin>
                        </Button>

                        --><!-- Text Label--><!--

                        <Label
                            Grid.Column="1"
                            Margin="0, 0, 40, 0"
                            FontAttributes="Bold"
                            FontSize="Large"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Start"
                            InputTransparent="True"
                            Text="favs"
                            TextColor="Black"
                            VerticalOptions="Center"
                            VerticalTextAlignment="Center" />

                        --><!-- Icon Image --><!--
                        <Image
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="20, 0, 0, 0"
                            HeightRequest="40"
                            HorizontalOptions="End"
                            InputTransparent="True"
                            Source="baseline_key_white.png"
                            VerticalOptions="Center"
                            WidthRequest="40" />
                    </Grid>-->

                    

                    <Button Text="FAQs"
                            x:Name="FAQs"
                            RelativeLayout.HeightConstraint="75"
                            RelativeLayout.WidthConstraint="{ConstraintExpression
                                Type=RelativeToParent,
                                Property=Width,
                                Factor=1}"
                            RelativeLayout.YConstraint="{ConstraintExpression
                                Type=RelativeToView,
                                ElementName=Laundry,
                                Property=Height,
                                Constant=165}"
                            xct:IconTintColorEffect.TintColor="#003263"
                            ImageSource="baseline_quiz_white_24.png"
                            Clicked="FAQs_Clicked"
                            />

                    <Button Text="Get Connected"
                            x:Name="GetConnected"
                                 RelativeLayout.HeightConstraint="75"
                                 RelativeLayout.WidthConstraint="{ConstraintExpression
                        Type=RelativeToParent,
                        Property=Width,
                        Factor=1}"
                                 RelativeLayout.YConstraint="{ConstraintExpression
                        Type=RelativeToView,
                        ElementName=FAQs,
                        Property=Height,
                        Constant=245}"
                            xct:IconTintColorEffect.TintColor="#003263"
                            ImageSource="baseline_live_tv_white_24.png"
                            Clicked="GetConnected_Clicked"
                           />

                    <ImageButton x:Name="Stream2App"
                            RelativeLayout.HeightConstraint="80"
                            RelativeLayout.XConstraint="{ConstraintExpression
                        Type=RelativeToParent,
                        Property=Width,
                        Constant=-40,
                        Factor=.5
                       }" 
                            RelativeLayout.YConstraint="{ConstraintExpression
                        Type=RelativeToView,
                        ElementName=FAQs,
                        Property=Height,
                        Constant=325}"
                            Source="stream2.png"
                            Clicked="Stream2App_Clicked"
                            BorderColor="#B0D7FF"
                            BorderWidth="2"
                            CornerRadius="30"
                            WidthRequest="80"
                            HeightRequest="80" />

                    <CarouselView x:Name="Carousel"
                                  RelativeLayout.HeightConstraint="200"
                                  RelativeLayout.WidthConstraint="{ConstraintExpression
                                    Type=RelativeToParent,
                                    Property=Width,
                                    Factor= 1}"
                                  RelativeLayout.YConstraint="{ConstraintExpression
                                    Type=RelativeToView,
                                    ElementName=Stream2App,
                                    Property=Height,
                                    Constant=405}"
                                    HeightRequest="200">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Url}" Aspect="AspectFill" />
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>

                    <!--<IndicatorView x:Name="IndicatorView"
                           IndicatorColor="Gray"
                           SelectedIndicatorColor="DarkGray"
                           IndicatorSize="10"
                           VerticalOptions="Center" />-->
                    
                </RelativeLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>